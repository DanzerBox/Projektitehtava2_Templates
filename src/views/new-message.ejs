      <div class="form-group">
        <label for="title">New Message</label>
        <textarea name="message" id="message"  rows="10" class="form-control" placeholder="Write your message.."
         required></textarea>
      </div>

      <div class="form-group">
        <label for="title">button to send</label>
        <input type="submit" value="Post Entry" class="btn btn-primary">
      </div>

